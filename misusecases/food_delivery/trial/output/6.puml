@startuml
left to right direction
skinparam packageStyle rectangle

actor "Customer" as Customer
actor "Scammer"  as Scammer

' --- Visual styling ---
' Style the Scammer actor (dark stickman) without showing any stereotype text
skinparam actor {
  BackgroundColor<<scammerStyle>> #222222
  BorderColor<<scammerStyle>>     #222222
  FontColor<<scammerStyle>>       #111111
  StereotypeFontColor<<scammerStyle>> #111111
}

' Misuse case: dark background, keep name + stereotype readable
skinparam usecase {
  BackgroundColor<<misuse>> #222222
  BorderColor<<misuse>>     #222222
  FontColor<<misuse>>       #FFFFFF
  StereotypeFontColor<<misuse>> #FFFFFF
}

' Hide stereotype text globally (keeps <<misuse>> visible because we re-show it below)
hide stereotype
' Re-show stereotype text for misuse cases so <<misuse>> remains visible
show <<misuse>> stereotype

' Apply styling stereotype to the Scammer actor (stereotype text is hidden)
Scammer <<scammerStyle>>

rectangle "Food Delivery System" {
  usecase "Place Order" as UC_PlaceOrder
  usecase "Track Delivery" as UC_TrackDelivery
  usecase "Verify Delivery\nwith PIN Code" as UC_VerifyPIN

  usecase "Falsely Claim\nNon-Delivery" as MU_ClaimNonDelivery <<misuse>>
}

' --- Associations (no labels) ---
Customer --> UC_PlaceOrder
Customer --> UC_TrackDelivery
Scammer --> MU_ClaimNonDelivery

' Include security use case
UC_TrackDelivery ..> UC_VerifyPIN : <<include>>

' Threatens / mitigates shown as stereotypes
MU_ClaimNonDelivery ..> UC_TrackDelivery : <<threatens>>
UC_VerifyPIN ..> MU_ClaimNonDelivery : <<mitigates>>

@enduml
